<div id="user-list">
<h1>Products</h1>
<p><%= link_to "Add a new product", products_new_path %></p>

<ul>
<% @products.each do |product| %>
	<li>
		<h4><%= link_to product.title, "/products/#{product.id}" %></h4>
		<p><em><%= product.deadline %></em></p>
		<p><%= product.description %></p>
		<p>It belongs to <%= product.user.name %>
	</li>
<% end %>
</ul>
</div>