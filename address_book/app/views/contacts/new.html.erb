<style>
body {
	font-family: helvetica;
}
input {
	display: block;
	margin-bottom: 15px;
}
</style>

<h1>Add a contact</h1>

<%= form_for @contact, url: new_path do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :address%>
	<%= f.text_field :address %>

	<%= f.label :number%>
	<%= f.text_field :number %>

	<%= f.label :email_address%>
	<%= f.text_field :email_address %>

	<%= f.button %>

<% end %>

<p><a href="/">Back to the list</a></p>